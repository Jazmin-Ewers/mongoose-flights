<%- include('../partials/header') %>
<!-- Step 5 Create layout for page that displays a specific flight using Flight model data given by the controller function -->
<section id="show-page">
  <div>Airline </div>
  <div><%= flight.airline %></div>
  <div>Aiport: </div>
  <div><%= flight.airport %></div>
  <div>Flight Number: </div>
  <div><%= flight.flightNo %></div>
  <div>Date: </div>
  <div><%= flight.flightDate%></div>
</section>

<br><br>
<h2>Destination</h2>
<form id="add-destination-form" method="POST" action="/flights/<%= flight._id %>/destinations">
  <label>Airport:</label>
  <select name="airport">
    <option value="AUS">AUS</option>
    <option value="DFW">DFW</option>
    <option value="DEN">DEN</option>
    <option value="LAX">LAX</option>
    <option value="SAN">SAN</option>
  </select>
  <label>Arrival Date:</label>
  <input type="date" name="arrival">
  <input type="submit" value="Add Destination">
</form>

<br><br>
<h2>All Destinations</h2>
  <table>
    <thead>
      <tr>
        <th>Airport</th>
        <th>Arrival</th>
      </tr>
    </thead>
    <tbody>
      <% flight.destinations.forEach(function(d) { %>
        <tr>
          <td><%= d.airport %></td>
          <td><%= d.arrival.toLocaleDateString() %></td>
        </tr>
      <% }); %>
    </tbody>
  </table>

<%- include('../partials/footer') %>